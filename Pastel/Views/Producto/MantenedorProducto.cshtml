
@{
    ViewBag.Title = "MantenedorProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Modal para Guardar Producto *@
<div class="modal fade" id="modalProducto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" value="0" id="idProducto" style="display:none;" />
                <div class="form-group row">
                    <label for="txtNombreProducto" class="col-sm-2 col-form-label">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtNombreProducto" placeholder="Nombre">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtPrecio" class="col-sm-2 col-form-label">Precio</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="txtPrecio" placeholder="precio">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="cboCategoria" class="col-sm-2 col-form-label">Categoria</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="cboCategoria">
                            <option value="0">Seleecione una categoria</option>
                            @{ 
                                foreach (var item in ViewBag.categoria)
                                {
                                    <option value="@item.idCategoria">@item.nombre</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtDescProducto" class="col-sm-2 col-form-label">Descripción</label>
                    <div class="col-sm-10">
                        <textarea id="txtDescProducto" class="form-control" placeholder="Descripción"></textarea>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="float:left;" data-dismiss="modal" id="closeModalProducto">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="GuardarProducto()">Guardar Producto</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Administrador de Productos</h2>
    </div>
    <div class="col-md-6">
        <button type="button" id="btnGuardarProducto" class="btn btn-success" style="float:right" data-toggle="modal" data-target="#modalProducto"><i class="fa fa-plus"></i>  Nuevo Producto</button>
    </div>
</div>

<div class="row" style="margin-top:20px;">
    <div class="col-md-12">
        <table class="table table-striped" style="width:100%" id="TbListarProducto">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Descripción</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section JavaScript{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Producto/Producto.js")"></script>
}