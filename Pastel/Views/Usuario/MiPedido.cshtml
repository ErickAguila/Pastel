                            <ul class="navbar-nav ml-auto" id="caviarMenu">
                                <li class="nav-item">
                                    <a class="nav-link" href="/Home/Home">Volver</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" onclick="Logout()">Cerrar Sesión</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div class="breadcumb-area bg-img bg-overlay" style="background-color: #000000; height: 100px;">

    </div>

    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="col-md-12">
                <table class="table table-striped" style="width:100%" id="TbListarMiPedido">
                    <thead>
                        <tr>
                            <th>N° Boleta</th>
                            <th>Nombre producto</th>
                            <th>Categoria</th>
                            <th>Fecha compra</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Total compra</th>
                            <th>Estado producto</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

