    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/Home/Sweetalert.js"></script>
    <script src="~/Scripts/Usuario/MiPedido.js"></script>
    
